/* LiquidCrystal Library - Blink
 
 Demonstrates the use a 16x2 LCD display.  The LiquidCrystal
 library works with all LCD displays that are compatible with the 
 Hitachi HD44780 driver. There are many of them out there, and you
 can usually tell them by the 16-pin interface.
 
 This sketch prints "Hello World!" to the LCD and makes the
 cursor block blink.

 The circuit:
 * LCD RS pin to digital pin 12
 * LCD Enable pin to digital pin 11
 * LCD D4 pin to digital pin 5
 * LCD D5 pin to digital pin 4
 * LCD D6 pin to digital pin 3
 * LCD D7 pin to digital pin 2
 * LCD R/W pin to ground
 * 10K resistor:
   * ends to +5V and ground
   * wiper to LCD VO pin (pin 3)

 Library originally added 18 Apr 2008
 by David A. Mellis
 library modified 5 Jul 2009
 by Limor Fried (http://www.ladyada.net)
 example added 9 Jul 2009
 by Tom Igoe
 modified 22 Nov 2010
 by Tom Igoe
 
 This example code is in the public domain.
 http://www.arduino.cc/en/Tutorial/LiquidCrystal

 */

// include the library code:
#include <LiquidCrystal.h>

// initialize the library with the numbers of the interface pins

LiquidCrystal lcd(P2_0, P2_1, P2_2, P2_3, P2_4, P2_5, P1_6, P1_7, P2_6, P2_7);

// Global variable
char s[2];
char incomingByte;
int k = 0;       // Count variable

// make some custom characters:
byte zero[8] = {
  0b00000,
  0b01110,
  0b10001,
  0b10001,
  0b10001,
  0b10001,
  0b10001,
  0b01110
};

byte one[8] = {
  0b00000,
  0b00100,
  0b01100,
  0b00100,
  0b00100,
  0b10101,
  0b00100,
  0b11111
};

byte two[8] = {
  0b00000,
  0b01110,
  0b00001,
  0b00001,
  0b01110,
  0b10000,
  0b10000,
  0b01110
};

byte three[8] = {
  0b00000,
  0b11110,
  0b00001,
  0b00001,
  0b01110,
  0b00001,
  0b00001,
  0b11110
};

byte four[8] = {
  0b00000,
  0b10001,
  0b10001,
  0b10001,
  0b11111,
  0b00001,
  0b00001,
  0b00001
};


byte five[8] = {
  0b00000,
  0b11111,
  0b10000,
  0b10000,
  0b01110,
  0b00001,
  0b00001,
  0b11110
};

byte six[8] = {
  0b00000,
  0b01111,
  0b10000,
  0b10000,
  0b01110,
  0b10001,
  0b10001,
  0b01110
};

byte seven[8] = {
  0b00000,
  0b01110,
  0b10001,
  0b10001,
  0b00001,
  0b00001,
  0b00001,
  0b00001
};

byte eight[8] = {
  0b00000,
  0b01110,
  0b10001,
  0b10001,
  0b01110,
  0b10001,
  0b10001,
  0b01110
};

byte nine[8] = {
  0b00000,
  0b01110,
  0b10001,
  0b10001,
  0b01110,
  0b00001,
  0b00001,
  0b00001
};

byte heart[8] = {
  0b00000,
  0b01010,
  0b11111,
  0b11111,
  0b01110,
  0b00100,
  0b00000,
  0b00000
};

byte blank[8] = {
  0b00000,
  0b00000,
  0b00000,
  0b00000,
  0b00000,
  0b00000,
  0b00000,
  0b00000
};

byte c[8] = {
  0b00000,
  0b00000,
  0b00000,
  0b00000,
  0b00111,
  0b01000,
  0b01000,
  0b00111
};

byte m[8] = {
  0b00000,
  0b00000,
  0b00000,
  0b00000,
  0b00000,
  0b11111,
  0b10101,
  0b10101
};

void setup() {

// Serial Setup__________________________________________________________________________

  Serial.begin(9600);

// LCD Setup ____________________________________________________________________________

  // create a new character
  lcd.createChar(100, zero);
  // create a new character
  lcd.createChar(1, one);
  // create a new character
  lcd.createChar(2, two);
  // create a new character
  lcd.createChar(3, three);
  // create a new character
  lcd.createChar(4, four);
  // create a new character
  lcd.createChar(5, five);
  // create a new character
  lcd.createChar(6, six);
  // create a new character
  lcd.createChar(7, seven);
  lcd.createChar(8, eight);
  lcd.createChar(9, nine);
  lcd.createChar(10,heart);
  lcd.createChar(11,blank);
  lcd.createChar(12,c);
  lcd.createChar(13,m);

  lcd.clear();

  // set up the lcd's number of columns and rows:
  lcd.begin(16, 2);

  // Print a message to the lcd.
  lcd.print("      I");
  lcd.write(10);
  lcd.print("Arduino! ");
  lcd.setCursor(4, 1);
  lcd.write(12);
  lcd.setCursor(5, 1);
  lcd.write(13);
  lcd.setCursor(0,1);
  lcd.write(11);
}

void loop() {

    if(k>1){
    for(int i=0; i<2;i=i+1){
            switch(s[i]){
                case '0':
                    lcd.setCursor(i+1, 1);
                    lcd.write(100);
                    break;
                case '1':
                    lcd.setCursor(i+1, 1);
                    lcd.write(1);
                    break;
                case '2':
                    lcd.setCursor(i+1, 1);
                    lcd.write(2);
                    break;
                case '3':
                    lcd.setCursor(i+1, 1);
                    lcd.write(3);
                    break;
                case '4':
                    lcd.setCursor(i+1, 1);
                    lcd.write(4);
                    break;
                case '5':
                    lcd.setCursor(i+1, 1);
                    lcd.write(5);
                    break;
                case '6':
                    lcd.setCursor(i+1, 1);
                    lcd.write(6);
                    break;
                case '7':
                    lcd.setCursor(i+1, 1);
                    lcd.write(7);
                    break;
                case '8':
                    lcd.setCursor(i+1, 1);
                    lcd.write(8);
                    break;
                case '9':
                    lcd.setCursor(i+1, 1);
                    lcd.write(9);
                    break;
                default :
                    lcd.setCursor(i+1, 1);
                    lcd.write(13);
        }
       }
    }
        delay(1000);
}

void serialEvent() {
    if(k=0){
        incomingByte = Serial.read();
        s[k] = incomingByte;
        k++;
    }
    else if(k=1){
        incomingByte = Serial.read();
        s[k] = incomingByte;
        k++;
    }
    else{
        k = 0;
    }
}
